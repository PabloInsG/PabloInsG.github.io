---
import ReactJS from '../icons/ReactJS.astro'
import TailwindCSS from '../icons/TailwindCSS.astro'
import JavaScript from '../icons/JavaScript.astro'
import VueJS from '../icons/VueJS.astro'
import MySQL from '../icons/MySQL.astro'
import AstroIcon from '../icons/AstroIcon.astro'
import Java from '../icons/Java.astro'
import Git from '../icons/Git.astro'
import PHP from '../icons/Php.astro'
import jQuery from '../icons/jQuery.astro'
import NodeJS from '../icons/NodeJS.astro'
import Cypress from '../icons/Cypress.astro'
import HTML from '../icons/HTML.astro'
import css from '../icons/CSS.astro'
import PlayWright from '../icons/PlayWright.astro'


const SKILLS = [
    { name: 'React', icon: ReactJS },
    { name: 'Javascript', icon: JavaScript },
    { name: 'Tailwind CSS', icon: TailwindCSS },
    { name: 'Vue.js', icon: VueJS },
    { name: 'HTML', icon: HTML },
    { name: 'CSS', icon: css },
    { name: 'Astro', icon: AstroIcon },
    { name: 'PHP', icon: PHP },
    { name: 'jQuery', icon: jQuery },
    { name: 'Java', icon: Java },
    { name: 'MySQL', icon: MySQL },
    { name: 'Node.js', icon: NodeJS },
    { name: 'Git', icon: Git },
    { name: 'Cypress.io', icon: Cypress },
    { name: 'PlayWright', icon: PlayWright },
];
---
<div class="grid grid-cols-3 gap-4 mt-7">
    {
        SKILLS.map((skill) => (
            <div class="flex flex-col items-center gap-y-2 bg-[#131313] hover:scale-110 hover:bg-[#1f1f1f] transition p-4 rounded-lg">
                <skill.icon class={skill.name === 'Cypress.io' || skill.name === 'jQuery' ? 'size-12' : 'size-12'}/>
                <span class="text-white text-lg">{skill.name}</span>
            </div>
        ))
    }
</div>